@import 'nib'
@import 'variables.styl'

html
    background $background
    font-family -apple-system, BlinkMacSystemFont, "Segoe UI", Helvetica Nueue, Arial, sans-serif

a
    text-decoration none
    color #000
    &:hover
        text-decoration underline
        cursor pointer
    &:visited
        color #000

.label
  width 300px
  margin-bottom 7px
  display inline-block
