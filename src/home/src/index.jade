html
  head
    title.
      The Trash Zone
    include ../../shared/html/head.jade
  body
    include ../../shared/html/header.jade
    main
      section.ab-section
        section.a-section
          img#iscasino(src='/iscasino.png')
          h3.odds-heading Weekly Odds
          #weekly-odds.odds
          h3.odds-heading Playoff Odds
          #playoff-odds.odds
          h3.odds-heading Championship Odds
          #championship-odds.odds
