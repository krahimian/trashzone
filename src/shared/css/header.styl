@import 'nib'
@import 'variables.styl'

header
  position relative
  max-width 970px
  text-align center
  margin 0 auto 10px
  border-bottom 3px solid #000

#tagline
  font-family 'Old Standard TT', serif

#title
  max-width 400px

#contact a
  padding-left 5px

.right-header
  absolute right bottom
  font-size 0.75rem
  line-height 0.875rem
  font-weight 700

.left-header
  text-align left
  font-size 0.75rem
  line-height 0.875rem
  font-weight 700
  margin-bottom 5px
  div
    display inline-block
    + div:before
      content " - "
      margin 0 5px
      text-align center

#menu
  border-top 1px solid $border
  text-align center
  padding 5px
  a
    padding 5px 10px
    display inline-block
    text-transform uppercase
    font-size 10px
    &:hover
      border-radius 5px
      background-color #ccc

@media (max-width: 800px)
  #title
    max-width 300px
  #contact
    display none
  .left-header
    margin-top 10px
    text-align center
